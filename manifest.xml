<package>
    <description brief="Rock Visualization Library">
	Provides a Qt based framework for visualisation of rock data items.
	Visualisation plugins for specific data items are within the respective packages.
    </description>
    <author>Jakob Schwendner/jakob.schwendner@dfki.de</author>
    <copyright>
	DFKI/robotik@dfki.de
    </copyright>
    <depend package="base/types" />
    <depend package="external/yaml-cpp" />
    <depend package="drivers/transformer" />
    <!-- needed for the vizkit/Ruby parts -->
    <rosdep name="osg" />
    <rosdep name="qt4" />
    <rosdep name="qt-designer" />

    <depend package="drivers/orogen/transformer" optional="1"/>
    <depend package="tools/orocos.rb" optional="1" />
    <depend package="qtruby" optional="1"/>
    <depend package="gui/rock_widget_collection"  optional="1"/>
</package>
