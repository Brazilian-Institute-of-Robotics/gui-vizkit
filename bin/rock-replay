#!/usr/bin/env ruby
#
require 'vizkit'

if ARGV.empty?
  puts
  puts "Programm for replaying log files"
  puts "Usage:"
  puts "replay logfile1, logfile2, ..."
  puts
  exit 1
end

log = Orocos::Log::Replay.open(ARGV)
log.track true
Vizkit.control log, :show_marker=>true, :marker_type=>"/logger/Marker"
Vizkit.exec

